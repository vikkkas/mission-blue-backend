# Environment variables

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/mission_blue?schema=public"

# Server
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# OTP
OTP_EXPIRY_MINUTES=5
OTP_LENGTH=6

# Email (Nodemailer - using Gmail as example)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@missionblue.com
RESEND_API_KEY=your-resend-api-key

# Twilio (for SMS OTP)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=15m

# AWS S3 (for presigned uploads)
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
S3_BUCKET=your-bucket-name
S3_PRESIGNED_EXPIRES=900
S3_BASE_URL=https://your-bucket.s3.us-east-1.amazonaws.com
